<h1>Pirate Info</h1>

<div class="pirate">
  <p>Pirate Name: <%= @pirate.name %></p>
  <p>Height: <%= @pirate.height %></p>
  <p>Weight: <%= @pirate.weight %></p>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %> 
  <div class="ship">
    <p>Ship Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>

